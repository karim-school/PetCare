@{
    var appointments = (Appointment[]) ViewBag.Appointments;
    var appointment = (Appointment) ViewBag.Appointment;

    if (appointment == null)
    {
        ViewData["Title"] = "Appointments";
        await Html.RenderPartialAsync("_Appointments", appointments, ViewData);
    }
    else
    {
        ViewData["Title"] = "Appointment " + appointment.Id;
        await Html.RenderPartialAsync("_Appointment", appointment, ViewData);
    }
}
